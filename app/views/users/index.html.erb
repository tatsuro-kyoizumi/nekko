            <h1 class="title"><strong><i class="fas fa-rss"></i>&nbsp;新着一覧</strong></h1>
            <hr>



            <div class="columns is-multiline">
              <% @posts.each do |post| %>
              <div class="column is-4">
                <div class="card">
                  <div class="card-image">
                    <figure class="image is-4by3">
                      <%= attachment_image_tag post, :post_image, fallback:"no_image.jpg" %>
                    </figure>
                  </div>

                  <div class="card-content">
                    <div class="media">
                      <div class="media-left">
                        <figure class="image is-48x48">
                          <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
                        </figure>
                      </div>
                      <div class="media-content">
                        <p class="title is-4"><%= link_to post.user.name, "/users/#{post.user_id}" %></p>
                      </div>
                    </div>

                    <div class="content">
                      <p><%= post.caption %></p>
                      <% if post.address.present? %>
                      <i class="fas fa-map-marker-alt"></i><span><small><%= post.address %></small></span>
                      <% else %>
                      <br>
                      <% end %>
                      <small><%= post.created_at.strftime('%Y/%m/%d %H:%M') %></small>

                      <% if post.favorited_by?(current_user) %>
                      <p><%= link_to post_favorites_path(post), method: :delete do %>
                        <i class="fa fa-heart" aria-hidden="true" style="color:red;"></i>
                        <%= post.favorites.count %>いいね
                        <% end %>
                        </p>
                      <% else %>
                        <p><%= link_to post_favorites_path(post), method: :post do %>
                          <i class="far fa-heart" aria-hidden="true"></i>
                          <%= post.favorites.count %>いいね
                          <% end %>
                          </p>
                      <% end %>
                  </div>

                  </div>
                </div>
              </div>
              <% end %>
            </div>


      <h1 class="title"><i class="fas fa-award"></i>&nbsp;週間ランキング</h1>


        <div class="columns">
          <% @all_ranks.each.with_index(1) do |rank, i| %>
          <div class="column is-one-third">
            <p><%= i %>位</p>
            <div class="card">
              <div class="card-image">
                <figure class="image is-4by3">
                  <%= attachment_image_tag rank, :post_image %>
                </figure>
              </div>

              <div class="card-content">
                <div class="media">
                  <div class="media is-left">
                    <figure class="image is-48x48">
                      <%= attachment_image_tag rank.user, :profile_image %>
                    </figure>
                    <div class="media-content">
                      <p class="title is-4"><%= link_to rank.user.name, "/users/#{rank.user_id}" %></p>
                    </div>
                  </div>
                </div>

                <div class="content">
                  <p><%= rank.caption %></p>
                  <% if rank.address.present? %>
                      <i class="fas fa-map-marker-alt"></i><span><%= rank.address %></span>
                      <% else %>
                      <br>
                      <% end %>
                      <p><%= rank.created_at.strftime('%Y/%m/%d %H:%M') %></p>
                      <p><%= rank.favorites.count %>いいね</p>

                      <% if rank.favorited_by?(current_user) %>
                      <p><%= link_to post_favorites_path(rank), method: :delete do %>
                        <i class="fa fa-heart" aria-hidden="true" style="color:red;"></i>
                        <%= rank.favorites.count %>いいね
                        <% end %>
                        </p>
                      <% else %>
                        <p><%= link_to post_favorites_path(rank), method: :post do %>
                          <i class="far fa-heart" aria-hidden="true"></i>
                          <%= rank.favorites.count %>いいね
                          <% end %>
                          </p>
                      <% end %>
                </div>
              </div>
            </div>
          </div>

          <% end %>
