<div class="columns">
  <div class="column is-8 is-offset-2">


    <h1 class="title has-text-centered">投稿編集</h1>
     <div class="box">
      <%= form_with model: @post do |f| %>

      <div class="field">
        <div class="control">
          <label for="caption">キャプション</label>
          <%= f.text_field :caption, class:"input is-medium is-primary" %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <label for="post_image">投稿写真</label>
          <%#= f.attachment_image :image %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <label for="address">ロケーション</label>
          <%= f.text_field :address, class:"input is-medium is-primary" %>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <label for="tag_list">タグ</label>
          <%= f.text_field :tag_list, class:"input is-medium is-primary" %>
        </div>

        <div class="actions">
          <%= f.submit '更新', class:"button is-primary" %>
        </div>
        <% end %>
      </div>

    </div>
