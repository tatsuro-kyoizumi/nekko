<li>
  <article class="panel" data-conversation-id="<%= conversation.id %>">
    <p class="panel-heading">
      <%= link_to conversation.opposed_user(user).name, '', class:"toggle-window" %>
      <%= link_to "x", close_conversation_path(conversation), class:"button is-small is-pulled-right", remote: true, method: :post %>
    </p>

    <div class="panel-block" style="display: none;">
      <div class="messages-list">
        <ul>
          <%= render 'conversations/conversation_content', messages: conversation.messages, user: user %>
        </ul>
      </div>
    </div>

    <div class="panel-block" style="display: none;">
      <%= form_for [conversation, conversation.messages.new], remote: true do |f| %>
      <%= f.hidden_field :user_id, value: user.id %>
      <div class="field">
        <div class="control">
        <%= f.text_area :body, class: "input is-medium" %>
        </div>
      </div>
      <%= f.submit "送信", class: "button is-success" %>
      <% end %>
    </div>


